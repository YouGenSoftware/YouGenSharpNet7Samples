    private Boolean FilterFunc(XE_HR_REGIONS_IR element, String searchString)
    {
        if (String.IsNullOrWhiteSpace(searchString))
            return true;
        if ($"{ element.REGION_ID_IR } { element.REGION_NAME }".Contains(searchString))        
            return true;
        return false;
