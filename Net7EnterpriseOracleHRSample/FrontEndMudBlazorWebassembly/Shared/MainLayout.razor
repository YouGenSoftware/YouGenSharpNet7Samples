@inherits LayoutComponentBase
@inject NavigationStateSingleton navState
@inject NavigationManager navigationManager
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Elevation="0" Color="Color.Dark">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" Size="Size.Large" OnClick="@(() => ClickMenu())" />
        <MudText class="pl-2" Typo="Typo.h3">XE_HR</MudText>
    </MudAppBar>
    <MudDrawer ClipMode="DrawerClipMode.Always" Width="20rem" Open="@navState.NavigationMenuOpen" Variant="DrawerVariant.Responsive">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code{
    private void ClickMenu()
    {
        navState.DrawerToggle(true);
        StateHasChanged();
    }
}
