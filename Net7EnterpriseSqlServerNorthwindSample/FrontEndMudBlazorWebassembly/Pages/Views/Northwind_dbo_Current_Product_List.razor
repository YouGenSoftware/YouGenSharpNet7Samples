    private Int32 selectedRowNumber = -1;
    private Northwind_dbo_Current_Product_List_IR searchModel = new Northwind_dbo_Current_Product_List_IR();
    private Northwind_dbo_Current_Product_List_IR referencesModel = new Northwind_dbo_Current_Product_List_IR();
    private IEnumerable<Northwind_dbo_Current_Product_List_IR>? retrievedRecords;
    private String modelName = "Northwind_dbo_Current_Product_List_IR";
    private Boolean waiting;
    private Boolean FilterFuncAll(Northwind_dbo_Current_Product_List_IR element) => FilterFunc(element, searchFilterText);
    private Boolean FilterFunc(Northwind_dbo_Current_Product_List_IR element, String searchString)
    {
        if (String.IsNullOrWhiteSpace(searchString))
            return true;
        if ($"{ element.ProductID_IR } { element.ProductName }".Contains(searchString))
           return true;
        return false;
    }
    private void RowClickEvent(TableRowClickEventArgs<Northwind_dbo_Current_Product_List_IR> tableRowClickEventArgs)
	{
	}
    private String SelectedRowClassFunc(Northwind_dbo_Current_Product_List_IR element, Int32 rowNumber)
    {
        if (selectedRowNumber == rowNumber)
        {
            selectedRowNumber = -1;
            return String.Empty;
        }
        else if (primaryTable!.SelectedItem != null && primaryTable!.SelectedItem.Equals(element))
        {
            selectedRowNumber = rowNumber;
            return "selected";
        }
        else
        {
            return String.Empty;
        }
    }
    private async Task Search(Boolean retrieveAll = false)
    {
        if (!retrieveAll)
            await searchForm!.Validate();
        if (!retrieveAll && !searchForm!.IsValid)
            return;
        waiting = true;
        retrievedRecords = retrieveAll ? await httpClient!.GetAll() : await httpClient!.GetByBestMatchedQueryPattern(searchModel);
        // retrievedRecords = retrieveAll ? await websocketClient!.GetAll() : await websocketClient!.GetByBestMatchedQueryPattern(searchModel);
        waiting = false;
        StateHasChanged();
    }    
    private void ShowReferencedRecords(Northwind_dbo_Current_Product_List_IR context)
    {
        referencesModel = context;        
    }
